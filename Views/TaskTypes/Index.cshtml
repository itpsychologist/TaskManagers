@using TaskManagers.Models
@model IEnumerable<TaskType>

<h1>Task Types</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Task Type</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"
                       onclick="return confirm('Are you sure you want to delete this task type?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

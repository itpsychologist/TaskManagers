@using TaskManagers.Models
@model IEnumerable<Worker>

<h1>Workers</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Worker</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Position</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Username</td>
                <td>@item.Email</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Position?.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"
                       onclick="return confirm('Are you sure you want to delete this worker?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>